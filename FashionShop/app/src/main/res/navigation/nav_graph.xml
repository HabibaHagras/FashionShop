<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/profileFragment">

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.fashionshop.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/orderFragment"
        android:name="com.example.fashionshop.OrdersFragment"
        android:label="Orders"
        tools:layout="@layout/fragment_orders" />


    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.fashionshop.FavoritesFragment"
        android:label="Favorites"
        tools:layout="@layout/fragment_favorites" />

    <fragment
        android:id="@+id/settingFragment"
        android:name="com.example.fashionshop.SettingFragment"
        android:label="Setting"
        tools:layout="@layout/fragment_setting" />

    <action
        android:id="@+id/action_profileFragment_to_ordersFragment"
        app:destination="@id/orderFragment" />

    <action
        android:id="@+id/action_profileFragment_to_favoritesFragment"
        app:destination="@id/favoritesFragment" />

    <action
        android:id="@+id/action_profileFragment_to_settingFragment"
        app:destination="@id/settingFragment" />

</navigation>